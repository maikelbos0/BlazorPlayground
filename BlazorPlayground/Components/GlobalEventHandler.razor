@implements IAsyncDisposable
@inject IJSRuntime JSRuntime


@code {
    private DotNetObjectReference<GlobalEventHandler> dotNetObjectReference;

    [Parameter]
    public EventCallback<KeyboardEventArgs> OnWindowKeyDown { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            dotNetObjectReference = DotNetObjectReference.Create(this);

            await JSRuntime.InvokeVoidAsync("GlobalEventHandler.register", dotNetObjectReference);
        }
    }

    [JSInvokable]
    public async Task OnKeyDown(KeyboardEventArgs args) {
        await OnWindowKeyDown.InvokeAsync(args);
    }

    public async ValueTask DisposeAsync() {
        await JSRuntime.InvokeVoidAsync("GlobalEventHandler.unregister", dotNetObjectReference);

        dotNetObjectReference.Dispose();
    }
}
